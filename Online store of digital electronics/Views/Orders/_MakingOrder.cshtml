@model IEnumerable<Online_store_of_digital_electronics.Models.Products>;

@foreach (Products products in Model)
{
<div class="basket-page__right-block">
    <div class="card mt-1">
        <div class="card-header py-3">
            <h5 class="mb-0">Краткие сведения</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                    Товары
                    <span>@products.Name</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                    Доставка
                    <span>Бесплатна</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                    <div>
                        <strong>Общая сумма</strong>
                        <strong>
                            <p class="mb-0">(Включая НДС)</p>
                        </strong>
                    </div>
                    <span><strong>@products.Price₽</strong></span>
                </li>
            </ul>

            <button type="button" class="btn btn-primary btn-lg btn-block">
                Перейти к оформлению заказа
            </button>
        </div>
    </div>
</div>
}