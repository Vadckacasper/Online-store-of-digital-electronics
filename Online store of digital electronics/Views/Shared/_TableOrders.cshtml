@model IEnumerable<Orders>


<table class="table align-middle mb-0 bg-white">
    <tbody>
        @foreach (var order in Model.Take(7).OrderByDescending(p => p.Id_order))
        {
            string modal = "#Modal" + order.Id_order.ToString();
            <tr class="list-group-item-action" role="button" data-bs-toggle="modal" data-bs-target="@modal">
                <td>
                    <p class="fw-normal mb-1">Номер заказа: @order.Id_order</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@order.Status</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@order.Delivery_method</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@order.Comment</p>
                </td>

            </tr>
        }
    </tbody>
</table>
@foreach (var order in Model.Take(7))
{
    string modal = "Modal" + order.Id_order.ToString();
    <div class="modal fade" id="@modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Заказ номер @order.Id_order</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    @await Html.PartialAsync("~/Views/Shared/_TableProduct.cshtml", order)
                </div>
            </div>
        </div>
    </div>
}
