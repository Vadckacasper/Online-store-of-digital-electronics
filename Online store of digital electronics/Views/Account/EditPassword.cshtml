@model Online_store_of_digital_electronics.ViewModel.EditPasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="text-black">
                <div class="card-body p-md-5">
                    <div class="row justify-content-center">
                        <div class="col-md-8 col-lg-7 col-xl-6">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid" alt="Phone image">
                        </div>
                        <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                            <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Сменя пароля</p>
                            <form class="mx-1 mx-md-4" method="post" asp-controller="Account" asp-action="EditPassword">
                                <div asp-validation-summary="ModelOnly"></div>
                                <input type="hidden" asp-for="id" value="@Model.id" />
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fa-solid fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4cd" asp-for="Password">Старый пароль</label>
                                        <input asp-for="Password" type="password" id="form3Example4cd" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fa-solid fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4cd" asp-for="NewPassword">Новый пароль</label>
                                        <input asp-for="NewPassword" type="password" id="form3Example4cd" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="NewPassword"></span>
                                    </div>
                                </div>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fa-solid fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <label class="form-label" for="form3Example4cd" asp-for="NewPasswordConfirm">Повторите пароль</label>
                                        <input asp-for="NewPasswordConfirm" type="password" id="form3Example4cd" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="NewPasswordConfirm"></span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button class="btn btn-primary btn-lg">Сохранить изменения</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</section>